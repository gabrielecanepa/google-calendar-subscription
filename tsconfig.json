{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "src",
    "outDir": "dist",
    "types": ["node"],
    "allowJs": false,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
