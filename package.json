{
  "name": "google-calendar-subscriptions",
  "version": "1.0.1",
  "description": "Extend the Google Calendar client to allow customizing and syncing calendar subscriptions ðŸ“†",
  "keywords": [
    "google",
    "google-calendar",
    "google-calendar-api",
    "google-calendar-client",
    "google-calendar-subscriptions",
    "google-calendar-synchronization",
    "calendar-subscriptions",
    "calendar-synchronization"
  ],
  "homepage": "https://github.com/gabrielecanepa/google-calendar-subscriptions#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielecanepa/google-calendar-subscriptions.git"
  },
  "bugs": {
    "url": "https://github.com/gabrielecanepa/google-calendar-subscriptions/issues"
  },
  "author": "Gabriele Canepa <contact@gabrielecanepa.com>",
  "license": "MIT",
  "main": "build/index.js",
  "module": "build/index.mjs",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "exports": {
    ".": "./build/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "tagAnnotation": "v${version}",
      "push": false
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "autoGenerate": true,
      "comments": {
        "submit": false,
        "issue": "This issue has been resolved in v${version}. See [${releaseName}](${releaseUrl}) for release notes.",
        "pr": "This pull request is included in v${version}. See [${releaseName}](${releaseUrl}) for release notes."
      }
    },
    "npm": {
      "publish": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits"
        },
        "header": "# Changelog",
        "infile": "CHANGELOG.md"
      }
    },
    "hooks": {
      "after:init": "yarn ci",
      "after:bump": [
        "yarn build",
        "mkdir -p versions/${version} && cp README.md $_ && git add $_"
      ],
      "after:release": "echo Successfully released ${name}@${version}."
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "build": "tsup --minify",
    "prepare": "husky install",
    "lint": "yarn lint:code && yarn lint:commits",
    "lint:code": "eslint . --ext .ts",
    "lint:code:fix": "yarn lint:code --fix",
    "lint:commits": "commitlint --from origin/main --to HEAD --verbose",
    "test": "jest",
    "ci": "yarn lint && yarn test",
    "release": "dotenv release-it --",
    "release:major": "yarn release --increment major --ci",
    "release:minor": "yarn release --increment minor --ci",
    "release:patch": "yarn release --increment patch --ci"
  },
  "dependencies": {
    "@googleapis/calendar": "^9.3.2",
    "googleapis-common": "^7.0.1",
    "ical.js": "^1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/gapi": "^0.0.47",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "release-it": "^17.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.0",
    "typescript": "^5.2.2"
  }
}
